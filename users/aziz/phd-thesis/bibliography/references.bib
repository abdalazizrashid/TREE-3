@article{Fourestey2005Solving,
  title = {Solving Inverse Problems Involving the {{Navier}}–{{Stokes}} Equations Discretized by a {{Lagrange}}–{{Galerkin}} Method},
  author = {Fourestey, Gilles and Moubachir, Marwan},
  date = {2005-02},
