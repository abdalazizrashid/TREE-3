@article{varleyElectronicStructureDefect2014,
  title = {Electronic Structure and Defect Properties of B6O from Hybrid Functional and Many-Body Perturbation Theory Calculations: {{A}} Possible Ambipolar Transparent Conductor},
  shorttitle = {Electronic Structure and Defect Properties of \$\{\textbackslash mathrm\{\vphantom{\}\}}{{B}}\vphantom\{\}\vphantom\{\}\_\{6\}\textbackslash mathrm\{\vphantom\}{{O}}\vphantom\{\}\$ from Hybrid Functional and Many-Body Perturbation Theory Calculations},
  author = {Varley, J. B. and Lordi, V. and Miglio, A. and Hautier, G.},
  date = {2014-07-16},
  journaltitle = {Physical Review B},
