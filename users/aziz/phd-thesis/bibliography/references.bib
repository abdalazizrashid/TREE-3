@article{hassanComparisonMetaheuristicAlgorithms2021,
  title = {A {{Comparison}} of {{Metaheuristic Algorithms}} for {{Solving}} the {{Piezoresistive Inverse Problem}} in {{Self-Sensing Materials}}},
  author = {Hassan, Hashim and Tallman, Tyler N.},
  date = {2021-01-01},
  journaltitle = {IEEE Sensors Journal},
  shortjournal = {IEEE Sensors J.},
  volume = {21},
